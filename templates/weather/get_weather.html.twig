{% extends 'base.html.twig' %}

{% block title %}Weather API{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}
            <div class="container">
                <div class="row">
                    <div class="col col-lg-2">
                        {{ form_label(form.city, 'City', { 'label_attr': { 'class': 'form-label' } }) }}
                    </div>
                    <div class="col-sm">
                        {{ form_widget(form.city, { 'label_attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col col-lg-2">
                        {{ form_label(form.resource, 'Resources', { 'label_attr': { 'class': 'form-label' } }) }}
                    </div>
                    <div class="col">
                        {{ form_widget(form.resource, { 'label_attr': { 'class': 'form-control' } }) }}
                    </div>
                </div>
            <input type="submit" value="submit">
            </div>
        {{ form_end(form) }}
    </div>
    {% if data is defined and data %}
        <div>
            <div>In {{ data.city }} temperature has {{ data.temp }} C.</div>
            <div>Wind speed is {{ data.windSpeed }}</div>
        </div>
    {% endif %}
{% endblock %}
